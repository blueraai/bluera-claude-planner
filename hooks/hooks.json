{
  "description": "Codex plan reviewer - reviews plans before exiting plan mode",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/review-plan.sh",
            "timeout": 180,
            "statusMessage": "Codex reviewing plan..."
          }
        ]
      }
    ]
  }
}
